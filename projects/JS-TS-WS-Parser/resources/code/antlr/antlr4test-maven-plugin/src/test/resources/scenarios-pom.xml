<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.apache.maven.plugin.my.unit</groupId>
	<artifactId>project-to-test</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>jar</packaging>
	<name>Test MyMojo</name>
	<properties>
		<antlr.version>4.2.2</antlr.version>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.antlr</groupId>
				<artifactId>antlr4-maven-plugin</artifactId>
				<version>${antlr.version}</version>
				<configuration>
					<grammars>tnt.g4</grammars>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>antlr4</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.antlr</groupId>
				<artifactId>antlr4test-maven-plugin</artifactId>
				<configuration>
					<scenarios>
						<scenario>
							<scenarioName>generic-pom</scenarioName>
							<verbose>false</verbose>
							<showTree>true</showTree>
							<entryPoint>equation</entryPoint>
							<grammarName>tnt</grammarName>
							<enabled>true</enabled>
							<testFileExtension>.txt</testFileExtension>
							<exampleFiles>src/test/resources/examples</exampleFiles>
						</scenario>
						<scenario>
							<scenarioName>CaseInsensitive_UPPER</scenarioName>
							<verbose>false</verbose>
							<showTree>false</showTree>
							<enabled>false</enabled>
							<entryPoint>rootRule</entryPoint>
							<grammarName>CaseInsensitive_UPPER</grammarName>
							<caseInsensitiveType>UPPER</caseInsensitiveType>
							<testFileExtension>.txt1</testFileExtension>
							<exampleFiles>src/test/resources/examples/</exampleFiles>
						</scenario>
						<scenario>
							<scenarioName>CaseInsensitive_lower</scenarioName>
							<verbose>true</verbose>
							<enabled>false</enabled>
							<showTree>false</showTree>
							<entryPoint>rootRule</entryPoint>
							<grammarName>CaseInsensitive_UPPER</grammarName>
							<caseInsensitiveType>UPPER</caseInsensitiveType>
							<testFileExtension>.txt1</testFileExtension>
							<exampleFiles>src/test/resources/examples/</exampleFiles>
						</scenario>
						<scenario>
							<scenarioName>Package-Without-Initialization</scenarioName>
							<packageName></packageName>
							<verbose>true</verbose>
							<showTree>true</showTree>
							<entryPoint>attrib_list</entryPoint>
							<grammarName>TestGrammar</grammarName>
							<packageName>dummy</packageName>
							<testFileExtension>.txt</testFileExtension>
							<exampleFiles>src/test/resources/scenarioNoInitialization/</exampleFiles>
						</scenario>
						<scenario>
							<scenarioName>Package-Initialize-IgnoreSpaces</scenarioName>
							<verbose>true</verbose>
							<showTree>true</showTree>
							<entryPoint>attrib_list</entryPoint>
							<grammarName>TestGrammar</grammarName>
							<packageName>dummy</packageName>
							<testFileExtension>.txt</testFileExtension>
							<exampleFiles>src/test/resources/scenarioInitializeIgnoreSpaces/</exampleFiles>
							<grammarInitializer>dummy.TestGrammarInitializer</grammarInitializer>
						</scenario>
					</scenarios>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>