{
  "name": "installer",
  "version": "0.1.0",
  "productName": "Node.js Installer",
  "description": "An Electron application for installing, updating and managing versions of Node.js.",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "lint": "standard",
    "spec": "ava",
    "test": "standard && ava"
  },
  "keywords": [],
  "contributors": [
    "Tomas Della Vedova (http://delved.org)",
    "Mikeal Rogers <mikeal.rogers@gmail.com> (http://www.mikealrogers.com)",
    "Felix Rieseberg <felix@felix.fun> (http://www.felix.fun)",
    "Samual Attard (https://www.samuelattard.com/)"
  ],
  "license": "Apache-2.0",
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel",
          "zip"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "appBundleId": "org.nodejs.installer",
        "appCategoryType": "public.app-category.productivity",
        "appCopyright": "Copyright Â© 2017 Node.js Foundation",
        "name": "Node.js Installer",
        "versionString": {
          "CompanyName": "Node.js Foundation",
          "FileDescription": "Node.js Installer",
          "ProductName": "Node.js Installer",
          "InternalName": "node-installer"
        },
        "protocols": [
          {
            "name": "Node.js Installer",
            "schemes": [
              "nodejs"
            ]
          }
        ],
        "protocol": [
          "nodejs"
        ],
        "protocolName": "Node.js Installer",
        "overwrite": true,
        "icon": "assets/icons/node-installer"
      },
      "electronWinstallerConfig": {
        "name": "installer"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {}
    }
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "files": [
      "spec/**/*.js",
      "!spec/__mocks__/**/*",
      "!spec/setup.js"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      "node7"
    ]
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "dependencies": {
    "electron-compile": "^6.4.1",
    "electron-log": "^2.2.7",
    "electron-sudo": "^4.0.12",
    "electron-window-state": "^4.1.1",
    "flexboxgrid": "^6.3.1",
    "font-awesome": "^4.7.0",
    "osenv": "^0.1.4",
    "prismjs": "^1.6.0",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-fontawesome": "^1.6.1",
    "react-prism": "^4.3.0",
    "request": "^2.81.0",
    "semver": "^5.3.0",
    "yo-yo": "^1.4.1"
  },
  "devDependencies": {
    "ava": "^0.21.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-node7": "^1.5.0",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.24.1",
    "devtron": "^1.4.0",
    "electron-devtools-installer": "^2.2.0",
    "electron-forge": "^3.0.5",
    "electron-prebuilt-compile": "1.7.4",
    "electron-process-manager": "0.0.4",
    "mockery": "^2.1.0",
    "react-hot-loader": "^3.0.0-beta.6",
    "sinon": "^2.3.8",
    "spectron": "^3.7.2",
    "standard": "^10.0.2"
  }
}
